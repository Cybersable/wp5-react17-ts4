{
  "name": "webpack-react-ts-template",
  "version": "1.0.0",
  "description": "Webpack react typescript app template",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.config.js --env env=dev",
    "start:prod": "webpack serve --config config/webpack.config.js --env env=prod",
    "build": "webpack --config config/webpack.config.js --env env=prod",
    "build:dev": "webpack --config config/webpack.config.js --env env=dev",
    "lint": "yarn run eslint \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:fix": "yarn run lint --fix ",
    "prettier:fix": "yarn run prettier \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --write",
    "format": "yarn run prettier:fix && yarn run lint:fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "typeScript",
    "webpack",
    "template"
  ],
  "devDependencies": {
    "husky": "4",
    "lint-staged": "^10.5.4",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "esbuild-loader": "^4.0.2",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "prettier": "^2.2.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "typescript": "^4.9.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
